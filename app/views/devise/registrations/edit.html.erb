<% content_for :title do %>
<%= t('views.shared.edit_profile') %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<div class="form-group">
  <%= f.label :name, class: 'required' %>
  <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :email, class: 'required'  %>
  <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :current_password, class: 'required'  %>
  <%= f.password_field :current_password, required: true, autocomplete: "current-password", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :organization %>
  <%= f.text_field :organization, autocomplete: "organization", class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :position %>
  <%= f.text_field :position, class: 'form-control' %>
</div>

<div class="form-group">
  <%= f.label :password, t('views.devise.registrations.new_password')  %>
  <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', 'aria-describedby': 'password-note' %>
  <small id="password-note" class="form-text"><%= t('views.devise.registrations.can_leave_blank') %></small>
</div>

<div class="form-group">
  <%= f.label :password_confirmation, t('views.devise.registrations.new_password_confirmation')  %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
</div>

<div class="form-group mt-5">
  <%= f.submit t('views.devise.registrations.update'), class: 'btn btn-block btn-secondary' %>
</div>

<div class="form-group mt-5">
  <%= link_to t('views.devise.registrations.close_account'), close_user_registration_path, class: 'btn btn-block btn-danger' %>
</div>
<% end %>