<% content_for :page_title, t('views.devise.passwords.password_instructions') %>

<% content_for :title do %>
<%= t('views.devise.passwords.password_instructions') %>
<% end %>

<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <p>
      <%= t('views.devise.passwords.intro') %>
    </p>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <div class="form-group">
      <%= f.label :email, class: 'required' %>
      <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="form-group">
      <%= f.submit t('views.devise.passwords.send_password_instructions'), class: 'btn btn-block btn-secondary' %>
    </div>
  </div>
</div>
<% end %>