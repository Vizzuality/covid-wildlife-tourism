<% content_for :page_title, I18n.t('views.status_store_owners.new.title', resource: @store.name) %>

<div class="row mt-5">
  <div class="col-md-11">
    <h1><%= I18n.t('views.status_store_owners.new.title', resource: @store.name) %></h1>
  </div>
  <% if can? :index, :manage_stores %>
    <div class="col-md-1">
      <%= link_to I18n.t('views.actions.back'), manage_stores_path,
        class: 'btn btn-sm btn-outline-primary' %>
    </div>
  <% end %>
</div>

<% if @store.latest_owner_status && @store.latest_owner_status.valid_until %>
  <div class="alert alert-info">
    <h5><%= I18n.t('views.status_store_owners.new.title_latest') %></h5>
    <p>
      <strong><%= Store.human_attribute_name(:state) %>:</strong>
      <%= I18n.t("views.status_store_owners.new.#{@store.latest_owner_status.status.to_i}") %> |
      <% if @store.latest_owner_status.valid_until > Time.now %>
        <%= I18n.t('views.status_store_owners.new.valid_until', time: @store.latest_owner_status.valid_until.strftime('%H:%M, %d/%m/%Y')) %>
      <% else %>
        <%= I18n.t('views.status_store_owners.new.expired_on', time: @store.latest_owner_status.valid_until.strftime('%H:%M, %d/%m/%Y')) %>
      <% end %>
    </p>
  </div>
<% end %>

<%= render 'form', store: @store, status_store_owner: @status_store_owner %>
