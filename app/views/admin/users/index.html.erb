<% content_for :title do %>
<%= t('views.shared.users') %>
<% end %>

<% if can? :new, User %>
<% content_for :title_options do %>
<%= link_to t('views.shared.new_user'), new_admin_user_path, class: 'btn btn-primary' %>
<% end %>
<% end %>

<%= form_tag admin_users_path, method: :get do %>
<div class="form-group">
  <%= label_tag :role, t('views.admin.users.role'), class: 'sr-only' %>
  <%= select_tag :role, options_for_select(enum_options_for_select(User, :role), params[:role]), { include_blank: t('views.admin.users.all_roles'), class: 'custom-select' }%>
</div>
<div class="form-group">
  <%= label_tag :search, t('views.shared.search'), class: 'sr-only' %>
  <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: t('views.admin.users.search_by_name') %>
</div>
<div class="form-group">
  <%= submit_tag t('views.shared.search'), class: 'btn btn-black' %>
</div>
<% end %>

<div class="mt-5">
  <%= render 'table', users: @users %>
</div>