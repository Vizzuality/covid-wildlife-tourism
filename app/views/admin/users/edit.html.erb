<% content_for :title do %>
<%= t('views.shared.user_details') %>
<% end %>

<%= form_for(@user, url: admin_user_path(@user), class: 'mt-5') do |f| %>
<div class="row">
  <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
    <%= render partial: 'form', locals: { f: f } %>
  </div>
</div>

<div class="row mt-5">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="form-group">
      <%= f.submit t('views.shared.save'), class: "btn btn-block btn-black" %>
    </div>
  </div>
</div>

<% if can? :destroy, @user %>
<div class="row mt-3">
  <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
    <div class="form-group">
      <%= link_to t('views.shared.delete'), admin_user_path(@user), method: :delete, data: { confirm: t('views.shared.delete_user_confirmation') }, class: 'btn btn-block btn-danger mt-2' %>
    </div>
  </div>
</div>
<% end %>
<% end %>