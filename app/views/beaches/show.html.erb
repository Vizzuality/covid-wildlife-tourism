<% content_for :page_title, @beach.name&.titleize %>

<div class="row mt-3">
  <div class="col-md-10">
    <span class="h2"><%= @beach.name %></span>
    <%= badge_for @beach %>
  </div>
  <div class="col-md-2">
    <% if can? :edit, @beach %>
      <%= link_to t('views.actions.edit'), edit_beach_path(@beach),
        class: 'btn btn-sm btn-outline-primary' %>
    <% end %>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <p>
          <strong><%= Store.human_attribute_name(:name) %>:</strong>
          <%= @beach.name %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:group) %>:</strong>
          <%= link_to @beach.group, beaches_path(group: @beach.group) %>
        </p>
        <% if current_user&.admin? %>
          <p>
            <strong><%= Store.human_attribute_name(:open) %>:</strong>
            <%= @beach.open %>
          </p>
          <p>
          <strong><%= Store.human_attribute_name(:created_by) %>:</strong>
            <%= link_to(@beach.created_by.display_name, @beach.created_by) if @beach.created_by %>
          </p>
          <p>
            <strong><%= Store.human_attribute_name(:updated_by) %>:</strong>
            <%= link_to(@beach.updated_by.display_name, @beach.updated_by) if @beach.updated_by %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <p>
          <strong><%= Store.human_attribute_name(:street) %>:</strong>
          <%= @beach.street %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:zip_code) %>:</strong>
          <%= @beach.zip_code %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:city) %>:</strong>
          <%= @beach.city %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:district) %>:</strong>
          <%= @beach.district %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:municipality) %>:</strong>
          <%= @beach.municipality %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:country) %>:</strong>
          <%= @beach.country %>
        </p>
        <p>
          <strong><%= t('views.stores.index.coordinates') %>:</strong>
          <%= [@beach.latitude, @beach.longitude].compact.join(', ') %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:capacity) %>:</strong>
          <%= @beach.capacity %>
        </p>
        <p>
          <strong><%= Store.human_attribute_name(:details) %>:</strong>
          <%= @beach.details %>
        </p>
      </div>
    </div>
  </div>
</div>
